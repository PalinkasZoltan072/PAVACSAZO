<Window x:Class="BankAlkalmazas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Banki ügyfél- és számlakezelő" Height="650" Width="1000">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- BAL OLDAL: LISTÁK -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Ügyfelek" FontWeight="Bold" FontSize="14" Margin="0,0,0,5" />
            <ListBox x:Name="lstUgyfelek" Height="150"
                     SelectionChanged="lstUgyfelek_SelectionChanged" />

            <TextBlock Text="Számlák" FontWeight="Bold" FontSize="14" Margin="0,10,0,5" />
            <ListBox x:Name="lstSzamlak" Height="150"
                     SelectionChanged="lstSzamlak_SelectionChanged" />

            <TextBlock Text="Tranzakciók" FontWeight="Bold" FontSize="14" Margin="0,10,0,5" />
            <ListBox x:Name="lstTranzakciok" Height="150" />

            <Button Content="Alap listák visszaállítása"
                    Margin="0,10,0,0" Width="200"
                    Click="btnAlapListak_Click" />
        </StackPanel>

        <!-- JOBB OLDAL: TABOK -->
        <TabControl Grid.Column="1">
            <!-- ÚJ REKORDOK -->
            <TabItem Header="Új rekordok">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">

                        <!-- Új ügyfél -->
                        <GroupBox Header="Új ügyfél felvétele" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Név:" Width="120" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtNev" Width="200"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Lakcím:" Width="120" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtLakcim" Width="200"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Születési dátum:" Width="120" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtSzul" Width="200" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Telefonszám:" Width="120" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtTelefon" Width="200" />
                                </StackPanel>
                                <Button Content="Ügyfél felvétele" Width="150"
                                        Click="btnUjUgyfel_Click"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Új számla -->
                        <GroupBox Header="Új számla nyitása" Margin="0,0,0,10">
                            <StackPanel Margin="5">

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Ügyfél ID:" Width="120" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtUgyfelId" Width="80"/>
                                </StackPanel>

                                <!-- KÖTELEZŐ SZÁMLASZÁM -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Számlaszám:" Width="120" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtSzamlaszam" Width="150"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Számlatípus:" Width="120" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbSzamlaTipus" Width="200">
                                        <ComboBoxItem Content="Folyószámla" />
                                        <ComboBoxItem Content="Megtakarítási számla" />
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Kezdő összeg:" Width="120" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtKezdoOsszeg" Width="80"/>
                                </StackPanel>

                                <Button Content="Számla nyitása" Width="150"
                Click="btnUjSzamla_Click"/>
                            </StackPanel>
                        </GroupBox>


                        <!-- Új tranzakció -->
                        <GroupBox Header="Új tranzakció rögzítése">
                            <StackPanel Margin="5">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Típus:" Width="120" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbTranzTipus" Width="150">
                                        <ComboBoxItem Content="Befizetés" />
                                        <ComboBoxItem Content="Készpénzfelvétel" />
                                        <ComboBoxItem Content="Átutalás" />
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Számlaszám (befizetés/kivét):"
                                               Width="180" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtTranzSzamla" Width="150"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Forrás számla (átutalás):"
                                               Width="180" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtForrasSzamla" Width="150"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Cél számla (átutalás):"
                                               Width="180" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtCelSzamla" Width="150"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Összeg:" Width="120" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtTranzOsszeg" Width="80"/>
                                </StackPanel>

                                <Button Content="Tranzakció rögzítése" Width="180"
                                        Click="btnUjTranzakcio_Click"/>
                            </StackPanel>
                        </GroupBox>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- SZŰRÉSEK -->
            <TabItem Header="Szűrés">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">

                        <!-- Ügyfél név alapján -->
                        <GroupBox Header="Ügyfelek keresése név alapján" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Név:" Width="100" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtUgyfelNevSzures" Width="200"/>
                                    <Button Content="Keresés" Width="100" Margin="10,0,0,0"
                                            Click="btnUgyfelNevSzures_Click"/>
                                </StackPanel>
                                <TextBlock Text="(Eredmény a bal oldali Ügyfelek listában jelenik meg.)"
                                           FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Számla szűrés -->
                        <GroupBox Header="Számlák szűrése" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Számlatípus :"
                                               Width="150" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtSzamlaTipusSzures" Width="150"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Min. egyenleg:" Width="150" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtMinEgyenleg" Width="80"/>
                                    <TextBlock Text="Max. egyenleg:" Width="120" Margin="10,0,0,0"
                                               VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtMaxEgyenleg" Width="80"/>
                                </StackPanel>
                                <Button Content="Számlák keresése" Width="160"
                                        Click="btnSzamlakSzures_Click"/>
                                <TextBlock Text="(Eredmény a bal oldali Számlák listában jelenik meg.)"
                                           FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Napi tranzakciók -->
                        <GroupBox Header="Tranzakciók dátum szerinti szűrése (adott nap)">
                            <StackPanel Margin="5">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Dátum:" Width="80" VerticalAlignment="Center"/>
                                    <DatePicker x:Name="dpTranzNap"/>
                                    <Button Content="Napi tranzakciók" Width="150" Margin="10,0,0,0"
                                            Click="btnNapiTranzakcio_Click"/>
                                </StackPanel>
                                <TextBlock Text="(Eredmény a bal oldali Tranzakciók listában jelenik meg.)"
                                           FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- SPECIÁLIS LEKÉRDEZÉSEK -->
            <TabItem Header="Speciális lekérdezések">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">

                        <!-- Negatív számlák -->
                        <GroupBox Header="Túlköltéses (negatív egyenlegű) számlák">
                            <StackPanel Margin="5">
                                <Button Content="Negatív számlák listázása" Width="220"
                                        Click="btnNegativSzamlak_Click"/>
                                <TextBlock Text="(Eredmény a bal oldali Számlák listában jelenik meg.)"
                                           FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Legnagyobb forgalmú ügyfél -->
                        <GroupBox Header="Legnagyobb forgalmú ügyfél" Margin="0,10,0,10">
                            <StackPanel Margin="5">
                                <Button Content="Legnagyobb forgalmú ügyfél keresése" Width="260"
                                        Click="btnLegnagyobbForgalom_Click"/>
                                <TextBlock x:Name="lblLegnagyobbForgalom"
                                           Margin="0,5,0,0" FontWeight="Bold"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Időszak tranzakciói -->
                        <GroupBox Header="Adott időszak összes tranzakciója">
                            <StackPanel Margin="5">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Kezdő dátum:" Width="100" VerticalAlignment="Center"/>
                                    <DatePicker x:Name="dpIdoszakKezdo"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Vég dátum:" Width="100" VerticalAlignment="Center"/>
                                    <DatePicker x:Name="dpIdoszakVeg"/>
                                </StackPanel>
                                <Button Content="Időszak tranzakciói" Width="180"
                                        Click="btnIdoszakTranzakciok_Click"/>
                                <TextBlock Text="(Eredmény a bal oldali Tranzakciók listában jelenik meg.)"
                                           FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
